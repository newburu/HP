<% provide(:title, 'お問い合わせ | 確認') %>

<%= render partial: '/shared/header' %>

<%= form_with(model: @reservation, url: contacts_path, local: true) do |f| %>
<%= f.fields_for :contact do |contact| %>
<div class='container-fluid text-center' id='content'>
  <div class='mt-2 mb-5'>
    <h2 class='display-4'>お問い合わせ確認</h2>
  </div>
  <div class='mx-auto range'>
    <div class='form-group row'>
      <label class='col-sm-2 col-form-label'>名前</label>
      <div class='col-sm-10'>
        <%= contact.text_field :name, class: 'form-control form-control-lg col-sm-8 text-center', readonly: true %>
      </div>
    </div>
    <div class='form-group row mt-5'>
      <label class='col-sm-2 col-form-label'>ふりがな</label>
      <div class='col-sm-10'>
        <%= contact.text_field :name_hiragana, class: 'form-control form-control-lg col-sm-8 text-center', readonly: true %>
      </div>
    </div>
    <div class='form-group row mt-5'>
      <label class='col-sm-2 col-form-label'>メールアドレス</label>
      <div class='col-sm-10'>
        <%= contact.text_field :email, class: 'form-control form-control-lg col-sm-8 text-center', readonly: true %>
      </div>
    </div>
    <div class='form-group row mt-5'>
      <label class='col-sm-2 col-form-label'>ご内容</label>
      <div class='col-sm-10'>
        <%= contact.text_field :matter, class: 'form-control form-control-lg col-sm-8 text-center', readonly: true %>
      </div>
    </div>
    <div class='form-group row mt-5'>
      <label class='col-sm-2 col-form-label'>ご希望のメニュー</label>
      <div class='col-sm-10'>
        <%= contact.text_field :menu, class: 'form-control form-control-lg col-sm-8 text-center', readonly: true %>
      </div>
    </div>
    <div class='form-group row mt-5'>
      <label class='col-sm-2 col-form-label'>お支払方法</label>
      <div class='col-sm-10'>
        <%= contact.text_field :payment, class: 'form-control form-control-lg col-sm-8 text-center', readonly: true %>
      </div>
    </div>
    <div class='form-group row mt-5'>
      <label class='col-sm-2 col-form-label'>面談希望日</label>
      <div class='col-sm-10'>
        <%= f.text_field :day, class: 'form-control form-control-lg col-sm-8 text-center', readonly: true %>
      </div>
    </div>
    <div class='form-group row mt-5'>
      <label class='col-sm-2 col-form-label'>面談希望時間</label>
      <div class='col-sm-10'>
        <%= f.text_field :time, class: 'form-control form-control-lg col-sm-8 text-center', readonly: true %>
      </div>
    </div>
    <div class='row mt-5'>
      <label class='col-sm-2 col-form-label'>お問い合わせ内容</label>
      <div class='col-sm-7'>
        <%= contact.text_area :content, class: 'form-control', rows: '10', readonly: true%>
      </div>
    </div>
  </div>
  <%= f.submit value: '送信', class: 'btn btn-primary btn-lg mt-5' %>
</div>
<% end %>
<% end %>
