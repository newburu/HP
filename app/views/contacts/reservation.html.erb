<% provide(:title, 'お問い合わせ | 日程予約') %>

<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <h1>新規予約画面</h1>
    </div>
    <div class="col-12 mt-5 text-center">
      <%= form_with model: @reservation, url: confirm_contacts_path, local: true, class: 'form' do |f| %>
      <div class="day form-group">
        <%= f.label :day, '日付' %>
        <%= f.text_field :day, class: 'form-control text-center p-3', value: @day, readonly: true %>
      </div>
      <div class="time form-group">
        <%= f.label :time, '時間' %>
        <%= f.text_field :time, class: 'form-control text-center p-3', value: @time, readonly: true %>
      </div>
      <%= f.hidden_field :start_time, value: @start_time %>
      <div class="submit">
        <%= f.submit value: '予約する', class: 'btn btn-primary mx-auto d-block' %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<%= hidden_field_tag :name,           @contact.name %>
<%= hidden_field_tag :name_hiragana,  @contact.name_hiragana %>
<%= hidden_field_tag :email,          @contact.email %>
<%= hidden_field_tag :matter,         @contact.matter %>
<%= hidden_field_tag :menu,           @contact.menu %>
<%= hidden_field_tag :discount,       @contact.discount %>
<%= hidden_field_tag :payment,        @contact.payment %>
<%= hidden_field_tag :content,        @contact.content %>

