<head>
  <!-- テキストエディタ「Quilljs」のライブラリ -->
  <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
  <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
  <link href="https://cdn.quilljs.com/1.3.6/quill.bubble.css" rel="stylesheet">
</head>

<%= form_with model: @article, url: {controller: 'articles', action: 'create'} do |f| %>
  <div class="row">
    <%= f.label :title, 'タイトル', class: 'col-3' %>
    <%= f.text_field :title, class: 'col-7' %>
  </div>
  <div class='editor' style='height: 30rem'>
    <%= f.text_area :body %>
  </div>
  <div class='row'>
    <%= f.submit '保存する', class: 'button' %>
  </div>
<% end %>

<script src="https://cdn.quilljs.com/1.2.2/quill.js"></script>
<script>    
  var toolbarOptions = [
    ['bold', 'italic', 'underline', 'strike'],
    ['blockquote'],
    [{'header': [1, 2, 3, 4, 5, 6, false]}],
    [{'align': []}],
    [{'list': 'ordered'}, {'list': 'bullet'}],
    [{'color': [] }, { 'background': [] }],
    ['link', 'image', 'video'],
  ]

  var quill = new Quill('.editor', {
    modules: {
      toolbar: toolbarOptions
    },

    theme: 'snow'
  });
</script>
