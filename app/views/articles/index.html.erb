<h2 class="blog-h2">Blog</h2>

<div class="container-fluid w-75">
  <div class="row">
    <div class="col-7">
    <% @articles.each do |article| %>
      <%= link_to article_path(article), class: 'article-block' do %>
        <div class="flex">
          <%= image_tag "#{article.thumbnail}", :size => '320x200' %>
          <div class="title-body">
            <h4 class="title"><%= article.title %></h4>
            <p class="body"><%= article.body[0..25]%>.....</p>
          </div>
        </div>
      <% end %>
    <% end %>
    </div>
    <div class="col-5">
      <% @articles_per_months.each do |key, hash| %>
        <div class="YM">
          <input id="acd-check1" class="acd-check" type="checkbox">
          <label class="acd-label" for="acd-check1"><%= key %>(<%= hash %>)</label>
        </div>
      <% end %> 
    <div>
  </div>
</div>

<%= paginate @articles %>
